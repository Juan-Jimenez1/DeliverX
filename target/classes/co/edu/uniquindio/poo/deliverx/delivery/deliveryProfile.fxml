<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="580.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.deliverx.controller.DeliveryProfile">

    <VBox layoutX="40.0" layoutY="40.0" prefWidth="500.0" spacing="20.0">

        <Label style="-fx-font-weight: bold;" text="My Profile">
            <font>
                <Font size="24.0" />
            </font>
        </Label>

        <Separator prefWidth="500.0" />

        <GridPane hgap="15.0" prefWidth="500.0" vgap="15.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="300.0" prefWidth="300.0" />
            </columnConstraints>

            <Label text="Delivery ID:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <font><Font size="14.0" /></font>
            </Label>
            <TextField fx:id="deliveryIdField" editable="false" style="-fx-background-color: #f0f0f0; -fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <font><Font size="14.0" /></font>
            </Label>
            <TextField fx:id="nameField" style="-fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Document:" GridPane.columnIndex="0" GridPane.rowIndex="2">
                <font><Font size="14.0" /></font>
            </Label>
            <TextField fx:id="documentField" style="-fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3">
                <font><Font size="14.0" /></font>
            </Label>
            <TextField fx:id="emailField" style="-fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="4">
                <font><Font size="14.0" /></font>
            </Label>
            <TextField fx:id="phoneField" style="-fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Label text="Coverage Zone:" GridPane.columnIndex="0" GridPane.rowIndex="5">
                <font><Font size="14.0" /></font>
            </Label>
            <TextField fx:id="coverageZoneField" style="-fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="5" />

            <Label text="Current Status:" GridPane.columnIndex="0" GridPane.rowIndex="6">
                <font><Font size="14.0" /></font>
            </Label>
            <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="6">
                <Label fx:id="currentStatusLabel" style="-fx-font-weight: bold; -fx-font-size: 14px;" text="INACTIVE" textFill="#E74C3C" />
            </HBox>

            <Label text="Current Password:" GridPane.columnIndex="0" GridPane.rowIndex="7">
                <font><Font size="14.0" /></font>
            </Label>
            <PasswordField fx:id="currentPasswordField" promptText="Enter to change password" style="-fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="7" />

            <Label text="New Password:" GridPane.columnIndex="0" GridPane.rowIndex="8">
                <font><Font size="14.0" /></font>
            </Label>
            <PasswordField fx:id="newPasswordField" promptText="Leave blank to keep current" style="-fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="8" />
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>

        <Separator prefWidth="500.0" />

        <Label style="-fx-font-weight: bold;" text="Statistics">
            <font><Font size="16.0" /></font>
        </Label>

        <GridPane hgap="30.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" />
            </columnConstraints>

            <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <Label style="-fx-font-weight: bold;" text="Total Deliveries:" />
                <Label fx:id="totalDeliveriesLabel" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="0" textFill="#CC5E13" />
            </VBox>

            <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <Label style="-fx-font-weight: bold;" text="Completed:" />
                <Label fx:id="completedDeliveriesLabel" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="0" textFill="#4CAF50" />
            </VBox>

            <VBox spacing="5.0" GridPane.columnIndex="2" GridPane.rowIndex="0">
                <Label style="-fx-font-weight: bold;" text="Success Rate:" />
                <Label fx:id="successRateLabel" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="0%" textFill="#27AE60" />
            </VBox>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
        </GridPane>

        <HBox alignment="CENTER_LEFT" prefHeight="67.0" prefWidth="512.0" spacing="15.0">
            <Button onAction="#handleSaveProfile" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #CC5E13; -fx-text-fill: white; -fx-background-radius: 5;" text="Save Changes">
                <font><Font size="14.0" /></font>
            </Button>
            <Button onAction="#handleCancel" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #95A5A6; -fx-text-fill: white; -fx-background-radius: 5;" text="Cancel">
                <font><Font size="14.0" /></font>
            </Button>
        </HBox>

        <Label fx:id="messageLabel" prefWidth="500.0" textFill="green" wrapText="true">
            <font><Font size="12.0" /></font>
        </Label>

    </VBox>
</AnchorPane>
