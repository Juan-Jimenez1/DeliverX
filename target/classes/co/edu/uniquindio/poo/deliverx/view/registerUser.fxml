<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="650.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.deliverx.Controller.RegisterUserController">

    <VBox alignment="TOP_CENTER" layoutX="100.0" layoutY="50.0" prefWidth="450.0" spacing="20.0">
        <Label text="Registrar Nuevo Usuario" style="-fx-font-weight: bold;">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>

        <GridPane hgap="15.0" vgap="15.0" prefWidth="400.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="120.0" prefWidth="120.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="250.0" prefWidth="250.0" />
            </columnConstraints>

            <Label text="ID Usuario:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <font><Font size="14.0"/></font>
            </Label>
            <TextField fx:id="userIdField" promptText="Ingrese ID único" GridPane.columnIndex="1" GridPane.rowIndex="0"
                       style="-fx-background-radius: 5;"/>

            <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <font><Font size="14.0"/></font>
            </Label>
            <TextField fx:id="nameField" promptText="Nombre completo" GridPane.columnIndex="1" GridPane.rowIndex="1"
                       style="-fx-background-radius: 5;"/>

            <Label text="Correo:" GridPane.columnIndex="0" GridPane.rowIndex="2">
                <font><Font size="14.0"/></font>
            </Label>
            <TextField fx:id="emailField" promptText="ejemplo@email.com" GridPane.columnIndex="1" GridPane.rowIndex="2"
                       style="-fx-background-radius: 5;"/>

            <Label text="Teléfono:" GridPane.columnIndex="0" GridPane.rowIndex="3">
                <font><Font size="14.0"/></font>
            </Label>
            <TextField fx:id="phoneField" promptText="555-1234" GridPane.columnIndex="1" GridPane.rowIndex="3"
                       style="-fx-background-radius: 5;"/>

            <Label text="Contraseña:" GridPane.columnIndex="0" GridPane.rowIndex="4">
                <font><Font size="14.0"/></font>
            </Label>
            <PasswordField fx:id="passwordField" promptText="Contraseña" GridPane.columnIndex="1" GridPane.rowIndex="4"
                           style="-fx-background-radius: 5;"/>

            <Label text="Confirmar:" GridPane.columnIndex="0" GridPane.rowIndex="5">
                <font><Font size="14.0"/></font>
            </Label>
            <PasswordField fx:id="confirmPasswordField" promptText="Repetir contraseña" GridPane.columnIndex="1" GridPane.rowIndex="5"
                           style="-fx-background-radius: 5;"/>
        </GridPane>

        <Label fx:id="messageLabel" textFill="red" wrapText="true" prefWidth="400.0" textAlignment="CENTER">
            <font><Font size="12.0"/></font>
        </Label>

        <HBox alignment="CENTER" spacing="20.0" prefWidth="400.0">
            <Button text="Registrar" onAction="#handleRegister" prefWidth="150.0" prefHeight="40.0"
                    style="-fx-background-color: #CC5E13; -fx-text-fill: white; -fx-background-radius: 5;">
                <font><Font size="14.0" /></font>
            </Button>
            <Button text="Limpiar" onAction="#handleClear" prefWidth="150.0" prefHeight="40.0"
                    style="-fx-background-color: #95A5A6; -fx-text-fill: white; -fx-background-radius: 5;">
                <font><Font size="14.0" /></font>
            </Button>
        </HBox>

        <Separator prefWidth="400.0" />

        <Button text="Volver al Inicio" onAction="#handleBackToHome" prefWidth="200.0" prefHeight="35.0"
                style="-fx-background-color: #34495E; -fx-text-fill: white; -fx-background-radius: 5;">
            <font><Font size="12.0" /></font>
        </Button>
    </VBox>
</AnchorPane>