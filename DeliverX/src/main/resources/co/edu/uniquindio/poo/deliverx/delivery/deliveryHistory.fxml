<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="650.0" prefWidth="580.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.deliverx.Controller.DeliveryHistoryController">

    <VBox layoutX="25.0" layoutY="25.0" prefWidth="530.0" spacing="15.0">

        <Label text="Delivery History" style="-fx-font-weight: bold;">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>

        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <VBox spacing="5.0">
                <Label text="Date From:"/>
                <DatePicker fx:id="dateFromPicker" prefWidth="130.0" style="-fx-background-radius: 5;"/>
            </VBox>

            <VBox spacing="5.0">
                <Label text="Date To:"/>
                <DatePicker fx:id="dateToPicker" prefWidth="130.0" style="-fx-background-radius: 5;"/>
            </VBox>

            <VBox spacing="5.0">
                <Label text="Status:"/>
                <ComboBox fx:id="statusFilterComboBox" promptText="All" prefWidth="110.0"
                          style="-fx-background-radius: 5;"/>
            </VBox>

            <VBox spacing="18.0">
                <Label text=" "/>
                <HBox spacing="5.0">
                    <Button text="Filter" onAction="#handleFilter" prefWidth="70.0"
                            style="-fx-background-color: #CC5E13; -fx-text-fill: white; -fx-background-radius: 5;"/>
                    <Button text="Clear" onAction="#handleClear" prefWidth="70.0"
                            style="-fx-background-color: #95A5A6; -fx-text-fill: white; -fx-background-radius: 5;"/>
                </HBox>
            </VBox>
        </HBox>

        <TableView fx:id="historyTable" prefHeight="350.0" prefWidth="530.0">
            <columns>
                <TableColumn fx:id="orderIdColumn" text="Order ID" prefWidth="90.0">
                    <cellValueFactory>
                        <PropertyValueFactory property="idEnvio" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="destinationColumn" text="Destination" prefWidth="130.0">
                    <cellValueFactory>
                        <PropertyValueFactory property="destino" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="statusColumn" text="Final Status" prefWidth="100.0">
                    <cellValueFactory>
                        <PropertyValueFactory property="estado" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="deliveryDateColumn" text="Delivery Date" prefWidth="110.0">
                    <cellValueFactory>
                        <PropertyValueFactory property="fechaEntrega" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="durationColumn" text="Duration" prefWidth="100.0"/>
            </columns>
        </TableView>

        <HBox spacing="12.0" alignment="CENTER">
            <Button text="View Details" onAction="#handleViewDetails" prefWidth="120.0"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 5;"/>
            <Button text="Export Report" onAction="#handleExportReport" prefWidth="130.0"
                    style="-fx-background-color: #9C27B0; -fx-text-fill: white; -fx-background-radius: 5;"/>
        </HBox>

        <Separator prefWidth="530.0"/>

        <GridPane hgap="30.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" prefWidth="150.0" />
            </columnConstraints>

            <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <Label text="Total Deliveries:" style="-fx-font-weight: bold;"/>
                <Label fx:id="totalDeliveriesLabel" text="0" style="-fx-font-size: 18px; -fx-font-weight: bold;" textFill="#CC5E13"/>
            </VBox>

            <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <Label text="Completed:" style="-fx-font-weight: bold;"/>
                <Label fx:id="completedLabel" text="0" style="-fx-font-size: 18px; -fx-font-weight: bold;" textFill="#4CAF50"/>
            </VBox>

            <VBox spacing="5.0" GridPane.columnIndex="2" GridPane.rowIndex="0">
                <Label text="With Incidents:" style="-fx-font-weight: bold;"/>
                <Label fx:id="incidentsLabel" text="0" style="-fx-font-size: 18px; -fx-font-weight: bold;" textFill="#E74C3C"/>
            </VBox>

            <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <Label text="Avg. Delivery Time:" style="-fx-font-weight: bold;"/>
                <Label fx:id="avgTimeLabel" text="0 hrs" style="-fx-font-size: 16px;" textFill="#3498DB"/>
            </VBox>

            <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <Label text="Success Rate:" style="-fx-font-weight: bold;"/>
                <Label fx:id="successRateLabel" text="0%" style="-fx-font-size: 16px;" textFill="#27AE60"/>
            </VBox>
        </GridPane>

        <Label fx:id="statusLabel" textFill="#2C3E50">
            <font><Font size="12.0"/></font>
        </Label>
    </VBox>
</AnchorPane>