<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="650.0" prefWidth="580.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.deliverx.controller.DeliveryUpdateStatusController">

    <VBox layoutX="40.0" layoutY="40.0" prefWidth="500.0" spacing="20.0">

        <Label text="Update Delivery Status" style="-fx-font-weight: bold;">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>

        <Separator prefWidth="500.0" />

        <Label text="Select Order" style="-fx-font-weight: bold;">
            <font><Font size="16.0"/></font>
        </Label>

        <ComboBox fx:id="orderComboBox" promptText="Select an assigned order" prefWidth="450.0"
                  onAction="#handleOrderSelected" style="-fx-background-radius: 5;"/>

        <Separator prefWidth="500.0" />

        <GridPane hgap="15.0" vgap="15.0" prefWidth="500.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="300.0" prefWidth="300.0" />
            </columnConstraints>

            <Label text="Order ID:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <font><Font size="14.0"/></font>
            </Label>
            <Label fx:id="orderIdLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <font><Font size="14.0"/></font>
            </Label>

            <Label text="Destination:" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <font><Font size="14.0"/></font>
            </Label>
            <Label fx:id="destinationLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="1" wrapText="true">
                <font><Font size="14.0"/></font>
            </Label>

            <Label text="Current Status:" GridPane.columnIndex="0" GridPane.rowIndex="2">
                <font><Font size="14.0"/></font>
            </Label>
            <Label fx:id="currentStatusLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <font><Font size="14.0"/></font>
            </Label>
        </GridPane>

        <Separator prefWidth="500.0" />

        <Label text="Update to New Status" style="-fx-font-weight: bold;">
            <font><Font size="16.0"/></font>
        </Label>

        <VBox spacing="10.0">
            <RadioButton fx:id="enRutaRadio" text="EN_RUTA - In Route" toggleGroup="statusGroup">
                <font><Font size="14.0"/></font>
            </RadioButton>
            <RadioButton fx:id="entregadoRadio" text="ENTREGADO - Delivered" toggleGroup="statusGroup">
                <font><Font size="14.0"/></font>
            </RadioButton>
            <RadioButton fx:id="incidenciaRadio" text="INCIDENCIA - Report Incident" toggleGroup="statusGroup">
                <font><Font size="14.0"/></font>
            </RadioButton>
        </VBox>

        <Separator prefWidth="500.0" />

        <Label text="Additional Notes (Optional)" style="-fx-font-weight: bold;">
            <font><Font size="14.0"/></font>
        </Label>

        <TextArea fx:id="notesArea" promptText="Enter any additional notes or comments..."
                  prefHeight="100.0" prefWidth="450.0" wrapText="true"
                  style="-fx-background-radius: 5;"/>

        <Label fx:id="messageLabel" wrapText="true" prefWidth="500.0">
            <font><Font size="12.0"/></font>
        </Label>

        <HBox spacing="15.0" alignment="CENTER_LEFT">
            <Button text="Update Status" onAction="#handleUpdateStatus" prefWidth="150.0" prefHeight="40.0"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;">
                <font><Font size="14.0"/></font>
            </Button>
            <Button text="Cancel" onAction="#handleCancel" prefWidth="150.0" prefHeight="40.0"
                    style="-fx-background-color: #95A5A6; -fx-text-fill: white; -fx-background-radius: 5;">
                <font><Font size="14.0"/></font>
            </Button>
        </HBox>

    </VBox>
</AnchorPane>