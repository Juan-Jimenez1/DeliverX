<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="650.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.deliverx.controller.AdminController">
    <AnchorPane prefHeight="650.0" prefWidth="250.0" style="-fx-background-color: #FFE4B3;">
        <Label layoutX="40.0" layoutY="30.0" text="Panel Administrador" style="-fx-font-weight: bold;">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>

        <Label fx:id="adminNameLabel" layoutX="40.0" layoutY="65.0" text="Bienvenido, Admin">
            <font>
                <Font size="12.0"/>
            </font>
        </Label>

        <Separator layoutX="25.0" layoutY="100.0" prefWidth="200.0" />

        <Label layoutX="40.0" layoutY="120.0" text="GESTIÓN" style="-fx-font-weight: bold;">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>

        <Button layoutX="30.0" layoutY="150.0" mnemonicParsing="false" onAction="#loadRegisterDelivery"
                prefHeight="35.0" prefWidth="190.0" text="Registrar Repartidor"
                style="-fx-background-color: #CC5E13; -fx-text-fill: white; -fx-background-radius: 5;"/>

        <Button layoutX="30.0" layoutY="195.0" mnemonicParsing="false" onAction="#loadRegisterUser"
                prefHeight="35.0" prefWidth="190.0" text="Registrar Usuario"
                style="-fx-background-color: #CC5E13; -fx-text-fill: white; -fx-background-radius: 5;"/>

        <Button layoutX="30.0" layoutY="240.0" mnemonicParsing="false" onAction="#loadUserManagement"
                prefHeight="35.0" prefWidth="190.0" text="Gestionar Usuarios"
                style="-fx-background-color: #E67E50; -fx-text-fill: white; -fx-background-radius: 5;"/>

        <Button layoutX="30.0" layoutY="285.0" mnemonicParsing="false" onAction="#loadDeliveryManagement"
                prefHeight="35.0" prefWidth="190.0" text="Gestionar Repartidores"
                style="-fx-background-color: #E67E50; -fx-text-fill: white; -fx-background-radius: 5;"/>

        <Button layoutX="30.0" layoutY="330.0" mnemonicParsing="false" onAction="#loadEnvioManagement"
                prefHeight="35.0" prefWidth="190.0" text="Gestionar Envíos"
                style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-background-radius: 5;"/>

        <Separator layoutX="25.0" layoutY="385.0" prefWidth="200.0" />

        <Label layoutX="40.0" layoutY="405.0" text="REPORTES" style="-fx-font-weight: bold;">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>

        <Button layoutX="30.0" layoutY="435.0" mnemonicParsing="false" onAction="#loadMetrics"
                prefHeight="35.0" prefWidth="190.0" text="Ver Métricas"
                style="-fx-background-color: #B8421F; -fx-text-fill: white; -fx-background-radius: 5;"/>

        <Button layoutX="30.0" layoutY="480.0" mnemonicParsing="false" onAction="#loadReports"
                prefHeight="35.0" prefWidth="190.0" text="Generar Reportes"
                style="-fx-background-color: #B8421F; -fx-text-fill: white; -fx-background-radius: 5;"/>

        <Separator layoutX="25.0" layoutY="550.0" prefWidth="200.0" />

        <Button layoutX="30.0" layoutY="580.0" mnemonicParsing="false" onAction="#logout"
                prefHeight="35.0" prefWidth="190.0" style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-background-radius: 5;"
                text="Cerrar Sesión" />
    </AnchorPane>

    <!-- Área de contenido dinámico -->
    <AnchorPane fx:id="contentArea" layoutX="250.0" prefHeight="650.0" prefWidth="650.0" style="-fx-background-color: #FFFFFF;">
        <!-- Contenido de bienvenida por defecto -->
        <VBox alignment="CENTER" layoutX="100.0" layoutY="200.0" prefWidth="450.0" spacing="20.0">
            <Label text="Bienvenido al Panel de Administración" style="-fx-font-weight: bold;">
                <font>
                    <Font size="24.0"/>
                </font>
            </Label>
            <Label text="Selecciona una opción del menú lateral" textAlignment="CENTER" wrapText="true">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
        </VBox>
    </AnchorPane>
</AnchorPane>