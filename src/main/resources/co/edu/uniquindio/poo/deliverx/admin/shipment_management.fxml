<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.deliverx.controller.ShipmentManagementCo">

    <VBox layoutX="25.0" layoutY="25.0" prefWidth="600.0" spacing="20.0">
        <Label style="-fx-font-weight: bold;" text="Shipment Management">
            <font>
                <Font size="24.0" />
            </font>
        </Label>

        <HBox alignment="CENTER_LEFT" spacing="15.0">
            <TextField fx:id="searchField" prefWidth="250.0" promptText="Search by shipment ID or customer" style="-fx-background-radius: 5;" />
            <ComboBox fx:id="statusFilterComboBox" prefWidth="150.0" promptText="Filter by status" style="-fx-background-radius: 5;" />
            <Button onAction="#handleSearch" prefWidth="90.0" style="-fx-background-color: #CC5E13; -fx-text-fill: white; -fx-background-radius: 5;" text="Search" />
            <Button onAction="#handleRefresh" prefWidth="90.0" style="-fx-background-color: #E67E50; -fx-text-fill: white; -fx-background-radius: 5;" text="Refresh" />
        </HBox>

        <TableView fx:id="shipmentsTable" prefHeight="400.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="shipmentIdColumn" prefWidth="100.0" text="Shipment ID" />
                <TableColumn fx:id="customerColumn" prefWidth="120.0" text="Customer" />
                <TableColumn fx:id="originColumn" prefWidth="120.0" text="Origin" />
                <TableColumn fx:id="destinationColumn" prefWidth="120.0" text="Destination" />
                <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
                <TableColumn fx:id="priceColumn" prefWidth="80.0" text="Price" />
                <TableColumn fx:id="dateColumn" prefWidth="100.0" text="Date" />
            </columns>
        </TableView>

        <HBox alignment="CENTER" spacing="12.0">
            <Button onAction="#handleViewDetails" prefWidth="110.0" style="-fx-background-color: #E67E50; -fx-text-fill: white; -fx-background-radius: 5;" text="View Details" />
            <Button onAction="#handleAssignDelivery" prefWidth="130.0" style="-fx-background-color: #E67E50; -fx-text-fill: white; -fx-background-radius: 5;" text="Assign Delivery" />
            <Button onAction="#handleChangeStatus" prefWidth="120.0" style="-fx-background-color: #E67E50; -fx-text-fill: white; -fx-background-radius: 5;" text="Change Status" />
            <Button onAction="#handleDelete" prefWidth="110.0" style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-background-radius: 5;" text="Delete" />
        </HBox>

        <Label fx:id="statusLabel" textFill="#2C3E50">
            <font><Font size="12.0" /></font>
        </Label>
    </VBox>
</AnchorPane>
