<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="761.0" prefWidth="940.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.deliverx.controller.DeliveryManController">

    <!-- Side Panel -->
    <AnchorPane prefHeight="770.0" prefWidth="204.0" style="-fx-background-color: #CC5E13;">
        <Label layoutX="35.0" layoutY="25.0" style="-fx-font-weight: bold;" text="Delivery Panel">
            <font>
                <Font size="18.0" />
            </font>
        </Label>

        <Label fx:id="deliveryManNameLabel" layoutX="35.0" layoutY="60.0" text="Welcome, Delivery Man">
            <font>
                <Font size="12.0" />
            </font>
        </Label>

        <!-- Status Display -->
        <HBox alignment="CENTER_LEFT" layoutX="35.0" layoutY="85.0" spacing="10.0">
            <Label style="-fx-font-weight: bold;" text="Status:" />
            <Label fx:id="statusLabel" style="-fx-font-weight: bold;" text="INACTIVE" textFill="#E74C3C" />
        </HBox>

        <Separator layoutX="25.0" layoutY="115.0" prefWidth="170.0" />

        <Label layoutX="35.0" layoutY="130.0" style="-fx-font-weight: bold;" text="OPERATIONS">
            <font>
                <Font size="14.0" />
            </font>
        </Label>

        <!-- Availability Toggle -->
        <Button fx:id="toggleAvailabilityButton" layoutX="25.0" layoutY="160.0" mnemonicParsing="false" onAction="#toggleAvailability" prefHeight="40.0" prefWidth="170.0" style="-fx-background-color: linear-gradient(to right, #CC5E13, #E67E22); -fx-text-fill: white; -fx-background-radius: 5; -fx-font-weight: bold;" text="Activate Availability" />

        <Button layoutX="25.0" layoutY="210.0" mnemonicParsing="false" onAction="#viewAssignedOrders" prefHeight="35.0" prefWidth="170.0" style="-fx-background-color: #E67E50; -fx-text-fill: white; -fx-background-radius: 5;" text="Assigned Orders" />

        <Button layoutX="25.0" layoutY="255.0" mnemonicParsing="false" onAction="#updateDeliveryStatus" prefHeight="35.0" prefWidth="170.0" style="-fx-background-color: #E67E50; -fx-text-fill: white; -fx-background-radius: 5;" text="Update Status" />

        <Button layoutX="25.0" layoutY="300.0" mnemonicParsing="false" onAction="#viewDeliveryHistory" prefHeight="35.0" prefWidth="170.0" style="-fx-background-color: #E67E50; -fx-text-fill: white; -fx-background-radius: 5;" text="Delivery History" />

        <Separator layoutX="25.0" layoutY="355.0" prefWidth="170.0" />

        <Label layoutX="35.0" layoutY="375.0" style="-fx-font-weight: bold;" text="PROFILE">
            <font>
                <Font size="14.0" />
            </font>
        </Label>

        <Button layoutX="25.0" layoutY="405.0" mnemonicParsing="false" onAction="#manageProfile" prefHeight="35.0" prefWidth="170.0" style="-fx-background-color: #E67E50; -fx-text-fill: white; -fx-background-radius: 5;" text="My Profile" />

        <Separator layoutX="25.0" layoutY="505.0" prefWidth="170.0" />

        <Label layoutX="35.0" layoutY="525.0" style="-fx-font-weight: bold;" text="COVERAGE ZONE">
            <font>
                <Font size="12.0" />
            </font>
        </Label>

        <Label fx:id="coverageZoneLabel" layoutX="35.0" layoutY="550.0" prefWidth="160.0" text="Not assigned" wrapText="true">
            <font>
                <Font size="11.0" />
            </font>
        </Label>

        <Separator layoutX="25.0" layoutY="585.0" prefWidth="170.0" />

        <Button fx:id="logOut" layoutX="25.0" layoutY="600.0" mnemonicParsing="false" onAction="#logout" prefHeight="35.0" prefWidth="170.0" style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-background-radius: 5;" text="Log Out" />
    </AnchorPane>

    <!-- Content Area -->
    <AnchorPane fx:id="contentArea" layoutX="204.0" prefHeight="759.0" prefWidth="742.0" style="-fx-background-color: #FFFFFF;">
        <VBox alignment="CENTER" layoutX="100.0" layoutY="200.0" prefWidth="380.0" spacing="20.0">
            <Label style="-fx-font-weight: bold;" text="Delivery Panel">
                <font>
                    <Font size="24.0" />
                </font>
            </Label>
            <Label text="Manage your deliveries and availability" textAlignment="CENTER" wrapText="true">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <Label text="Activate your availability to receive shipments" textAlignment="CENTER" wrapText="true">
                <font>
                    <Font size="12.0" />
                </font>
            </Label>
        </VBox>
    </AnchorPane>
</AnchorPane>
