<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="650.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.deliverx.controller.PdfGeneratorControllerAdmin">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Panel principal -->
    <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <!-- Título -->
        <Label alignment="CENTER" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Generate PDF Reports">
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </Label>

        <!-- Formulario de configuración del reporte -->
        <GridPane hgap="15.0" vgap="15.0">
            <columnConstraints>
                <ColumnConstraints prefWidth="150.0" />
                <ColumnConstraints prefWidth="300.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>

            <!-- Tipo de Reporte -->
            <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Report Type:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <ComboBox fx:id="cmbReportType" onAction="#updatePreview" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <!-- Estado (visible solo para reporte por estado) -->
            <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Shipment State:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <ComboBox fx:id="cmbState" onAction="#updatePreview" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <!-- Mes (visible solo para reporte por mes) -->
            <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Month:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <ComboBox fx:id="cmbMonth" onAction="#updatePreview" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <!-- Nombre del archivo -->
            <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="File Name:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="txtFileName" promptText="Enter file name for PDF" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        </GridPane>

        <!-- Botones -->
        <HBox alignment="CENTER" spacing="15.0">
            <Button onAction="#generatePdf" prefWidth="120.0" style="-fx-background-color: #CC5E13; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" text="Generate PDF" />

            <Button onAction="#clearFields" prefWidth="120.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" text="Clear" />

            <Button onAction="#openFolder" prefWidth="120.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" text="Open Folder" />
        </HBox>

        <!-- Mensajes de estado y progreso -->
        <VBox alignment="CENTER" spacing="10.0">
            <ProgressBar fx:id="progressBar" prefWidth="300.0" />
            <Label fx:id="lblStatus" style="-fx-font-weight: bold; -fx-font-size: 12px;" />
        </VBox>

        <!-- Vista previa del reporte -->
        <VBox spacing="10.0">
            <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Report Preview:" />
            <TextArea fx:id="txtPreview" editable="false" prefHeight="150.0" prefRowCount="8" style="-fx-font-family: 'Courier New'; -fx-font-size: 11px;" />
        </VBox>
    </VBox>
</AnchorPane>