<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.deliverx.controller.UserManagementController">

    <VBox layoutX="25.0" layoutY="25.0" prefWidth="600.0" spacing="20.0">
        <Label style="-fx-font-weight: bold;" text="User Management">
            <font>
                <Font size="24.0" />
            </font>
        </Label>

        <HBox alignment="CENTER_LEFT" spacing="15.0">
            <TextField fx:id="searchField" prefWidth="300.0" promptText="Search by ID or name" style="-fx-background-radius: 5;" />
            <Button onAction="#handleSearch" prefWidth="100.0" style="-fx-background-color: #CC5E13; -fx-text-fill: white; -fx-background-radius: 5;" text="Search" />
            <Button onAction="#handleRefresh" prefWidth="100.0" style="-fx-background-color: #CC5E13; -fx-text-fill: white; -fx-background-radius: 5;" text="Refresh" />
        </HBox>

        <TableView fx:id="userTable" prefHeight="400.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="userIdColumn" prefWidth="100.0" text="User ID">
                    <cellValueFactory>
                        <PropertyValueFactory property="userId" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Name">
                    <cellValueFactory>
                        <PropertyValueFactory property="name" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="emailColumn" prefWidth="150.0" text="Email">
                    <cellValueFactory>
                        <PropertyValueFactory property="email" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="phoneColumn" prefWidth="120.0" text="Phone">
                    <cellValueFactory>
                        <PropertyValueFactory property="phoneNumber" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>

        <HBox alignment="CENTER" spacing="15.0">
            <Button onAction="#handleViewDetails" prefWidth="130.0" style="-fx-background-color: #CC5E13; -fx-text-fill: white; -fx-background-radius: 5;" text="View Details" />
            <Button onAction="#handleEdit" prefWidth="130.0" style="-fx-background-color: #CC5E13; -fx-text-fill: white; -fx-background-radius: 5;" text="Edit" />
            <Button onAction="#handleDelete" prefWidth="130.0" style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-background-radius: 5;" text="Delete" />
        </HBox>

        <Label fx:id="statusLabel" textFill="#2C3E50">
            <font><Font size="12.0" /></font>
        </Label>
    </VBox>
</AnchorPane>
