<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="650.0" prefWidth="580.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.deliverx.controller.UserProfileController">

    <VBox layoutX="40.0" layoutY="40.0" prefWidth="500.0" spacing="20.0">

        <Label text="My Profile" style="-fx-font-weight: bold;">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>

        <Separator prefWidth="500.0" />

        <GridPane hgap="15.0" vgap="15.0" prefWidth="500.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="300.0" prefWidth="300.0" />
            </columnConstraints>

            <Label text="User ID:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <font><Font size="14.0"/></font>
            </Label>
            <TextField fx:id="userIdField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0"
                       style="-fx-background-color: #f0f0f0; -fx-background-radius: 5;"/>

            <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <font><Font size="14.0"/></font>
            </Label>
            <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1"
                       style="-fx-background-radius: 5;"/>

            <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2">
                <font><Font size="14.0"/></font>
            </Label>
            <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2"
                       style="-fx-background-radius: 5;"/>

            <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="3">
                <font><Font size="14.0"/></font>
            </Label>
            <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="3"
                       style="-fx-background-radius: 5;"/>

            <Label text="Current Password:" GridPane.columnIndex="0" GridPane.rowIndex="4">
                <font><Font size="14.0"/></font>
            </Label>
            <PasswordField fx:id="currentPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="4"
                           promptText="Enter to change password" style="-fx-background-radius: 5;"/>

            <Label text="New Password:" GridPane.columnIndex="0" GridPane.rowIndex="5">
                <font><Font size="14.0"/></font>
            </Label>
            <PasswordField fx:id="newPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="5"
                           promptText="Leave blank to keep current" style="-fx-background-radius: 5;"/>
        </GridPane>

        <Label fx:id="messageLabel" textFill="green" wrapText="true" prefWidth="500.0">
            <font><Font size="12.0"/></font>
        </Label>

        <HBox spacing="15.0" alignment="CENTER_LEFT">
            <Button text="Save Changes" onAction="#handleSaveProfile" prefWidth="150.0" prefHeight="40.0"
                    style="-fx-background-color: #CC5E13; -fx-text-fill: white; -fx-background-radius: 5;">
                <font><Font size="14.0"/></font>
            </Button>
            <Button text="Cancel" onAction="#handleCancel" prefWidth="150.0" prefHeight="40.0"
                    style="-fx-background-color: #95A5A6; -fx-text-fill: white; -fx-background-radius: 5;">
                <font><Font size="14.0"/></font>
            </Button>
        </HBox>

    </VBox>
</AnchorPane>