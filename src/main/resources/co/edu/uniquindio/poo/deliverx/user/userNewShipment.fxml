<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.deliverx.controller.UserNewOrderController">
    <AnchorPane prefHeight="700.0" prefWidth="600.0">
        <VBox layoutX="40.0" layoutY="25.0" prefWidth="520.0" spacing="15.0">

            <Label style="-fx-font-weight: bold;" text="Create New Order">
                <font>
                    <Font size="24.0" />
                </font>
            </Label>

            <Separator prefWidth="500.0" />

            <Label style="-fx-font-weight: bold;" text="Shipment Information">
                <font><Font size="16.0" /></font>
            </Label>

            <GridPane hgap="15.0" prefWidth="500.0" vgap="15.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" prefWidth="150.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="300.0" prefWidth="300.0" />
                </columnConstraints>

                <Label text="Package Weight (kg):" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <font><Font size="14.0" /></font>
                </Label>
                <TextField fx:id="weightField" promptText="e.g., 2.5" style="-fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Dimensions (cm):" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <font><Font size="14.0" /></font>
                </Label>
                <HBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <TextField fx:id="heightField" prefWidth="90.0" promptText="Height" style="-fx-background-radius: 5;" />
                    <TextField fx:id="widthField" prefWidth="90.0" promptText="Width" style="-fx-background-radius: 5;" />
                    <TextField fx:id="depthField" prefWidth="90.0" promptText="Depth" style="-fx-background-radius: 5;" />
                </HBox>

                <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="2">
                    <font><Font size="14.0" /></font>
                </Label>
                <TextArea fx:id="descriptionArea" prefHeight="60.0" promptText="Package contents description" style="-fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <rowConstraints>
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                </rowConstraints>
            </GridPane>

            <Separator prefWidth="500.0" />

            <!-- DESTINATION ADDRESS - Direcciones guardadas del usuario -->
            <Label style="-fx-font-weight: bold;" text="Destination Address">
                <font><Font size="16.0" /></font>
            </Label>

            <Label text="Select destination address:" />
            <ComboBox fx:id="destinationComboBox" prefWidth="450.0" style="-fx-background-radius: 5; -fx-font-size: 14px;" />

            <Button onAction="#handleAddNewAddress" prefWidth="200.0" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-weight: bold;" text="âž• Add New Address" />

            <Separator prefWidth="500.0" />

            <!-- ORIGIN ADDRESS - Solo Armenia -->
            <Label style="-fx-font-weight: bold;" text="Origin Address">
                <font><Font size="16.0" /></font>
            </Label>

            <Label text="Origin address (fixed):" />
            <ComboBox fx:id="originComboBox" prefWidth="450.0" style="-fx-background-radius: 5; -fx-font-size: 14px;"/>

            <Separator prefWidth="500.0" />

            <Label style="-fx-font-weight: bold;" text="Additional Services">
                <font><Font size="16.0" /></font>
            </Label>

            <VBox spacing="10.0">
                <CheckBox fx:id="seguroCheckBox" text="Insurance ($5,000)" />
                <CheckBox fx:id="expressCheckBox" text="Express Delivery ($8,000)" />
                <CheckBox fx:id="firmaCheckBox" text="Signature Required ($2,000)" />
                <CheckBox fx:id="prioritarioCheckBox" text="Priority ($6,000)" />
            </VBox>

            <Separator prefWidth="500.0" />

            <Label style="-fx-font-weight: bold;" text="Payment Method">
                <font><Font size="16.0" /></font>
            </Label>

            <ComboBox fx:id="paymentMethodComboBox" prefWidth="300.0" style="-fx-background-radius: 5;" />

            <Separator prefWidth="500.0" />

            <HBox alignment="CENTER_LEFT" spacing="20.0">
                <VBox spacing="5.0">
                    <Label style="-fx-font-weight: bold;" text="Estimated Cost:">
                        <font><Font size="16.0" /></font>
                    </Label>
                    <Label fx:id="estimatedCostLabel" text="Costo estimado: $0.00" textFill="#CC5E13">
                        <font><Font size="16.0"/></font>
                    </Label>
                </VBox>
                <Button onAction="#handleCalculateCost" prefHeight="35.0" prefWidth="140.0" style="-fx-background-color: #E67E22; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-weight: bold;" text="Calculate Cost" />
            </HBox>

            <Label fx:id="messageLabel" prefHeight="50.0" prefWidth="500.0" wrapText="true">
                <font><Font size="12.0" /></font>
            </Label>

            <HBox alignment="CENTER" spacing="15.0">
                <Button onAction="#handleCreateOrder" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-weight: bold;" text="Create Order">
                    <font><Font size="16.0" /></font>
                </Button>
                <Button onAction="#handleClear" prefHeight="45.0" prefWidth="140.0" style="-fx-background-color: #95A5A6; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-weight: bold;" text="Clear Form">
                    <font><Font size="14.0" /></font>
                </Button>
            </HBox>

            <Region prefHeight="30.0" />

        </VBox>
    </AnchorPane>
</ScrollPane>