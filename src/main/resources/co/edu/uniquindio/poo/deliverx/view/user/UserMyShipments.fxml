<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="650.0" prefWidth="580.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.deliverx.Controller.UserOrdersController">

  <VBox layoutX="25.0" layoutY="25.0" prefWidth="530.0" spacing="15.0">

    <Label text="My Orders" style="-fx-font-weight: bold;">
      <font>
        <Font size="24.0"/>
      </font>
    </Label>

    <HBox spacing="10.0" alignment="CENTER_LEFT">
      <VBox spacing="5.0">
        <Label text="Filter by Status:"/>
        <ComboBox fx:id="statusFilterComboBox" promptText="All" prefWidth="150.0"
                  style="-fx-background-radius: 5;"/>
      </VBox>

      <VBox spacing="5.0">
        <Label text="Search:"/>
        <TextField fx:id="searchField" promptText="Order ID" prefWidth="150.0"
                   style="-fx-background-radius: 5;"/>
      </VBox>

      <VBox spacing="18.0">
        <Label text=" "/>
        <HBox spacing="5.0">
          <Button text="Search" onAction="#handleSearch" prefWidth="70.0"
                  style="-fx-background-color: #CC5E13; -fx-text-fill: white; -fx-background-radius: 5;"/>
          <Button text="Clear" onAction="#handleClear" prefWidth="70.0"
                  style="-fx-background-color: #95A5A6; -fx-text-fill: white; -fx-background-radius: 5;"/>
        </HBox>
      </VBox>
    </HBox>

    <TableView fx:id="ordersTable" prefHeight="400.0" prefWidth="530.0">
      <columns>
        <TableColumn fx:id="orderIdColumn" text="Order ID" prefWidth="100.0">
          <cellValueFactory>
            <PropertyValueFactory property="idEnvio" />
          </cellValueFactory>
        </TableColumn>
        <TableColumn fx:id="destinationColumn" text="Destination" prefWidth="120.0">
          <cellValueFactory>
            <PropertyValueFactory property="destino" />
          </cellValueFactory>
        </TableColumn>
        <TableColumn fx:id="statusColumn" text="Status" prefWidth="110.0">
          <cellValueFactory>
            <PropertyValueFactory property="estado" />
          </cellValueFactory>
        </TableColumn>
        <TableColumn fx:id="costColumn" text="Cost">
          <cellValueFactory>
            <PropertyValueFactory property="costo" />
          </cellValueFactory>
        </TableColumn>
        <TableColumn fx:id="dateColumn" text="Date" prefWidth="120.0">
          <cellValueFactory>
            <PropertyValueFactory property="fechaCreacion" />
          </cellValueFactory>
        </TableColumn>
      </columns>
    </TableView>

    <HBox spacing="12.0" alignment="CENTER">
      <Button text="View Details" onAction="#handleViewDetails" prefWidth="120.0"
              style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 5;"/>
      <Button text="Track Order" onAction="#handleTrackOrder" prefWidth="120.0"
              style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-background-radius: 5;"/>
      <Button text="Cancel Order" onAction="#handleCancelOrder" prefWidth="120.0"
              style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-background-radius: 5;"/>
    </HBox>

    <Label fx:id="statusLabel" textFill="#2C3E50">
      <font><Font size="12.0"/></font>
    </Label>
  </VBox>
</AnchorPane>