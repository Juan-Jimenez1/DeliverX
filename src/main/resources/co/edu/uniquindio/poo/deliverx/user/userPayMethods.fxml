<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="650.0" prefWidth="580.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.deliverx.controller.UserPaymentMethodsController">

    <VBox layoutX="25.0" layoutY="25.0" prefWidth="530.0" spacing="15.0">

        <Label text="My Payment Methods" style="-fx-font-weight: bold;">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>

        <HBox spacing="15.0" alignment="CENTER_LEFT">
            <Button text="Add Payment Method" onAction="#handleAddPaymentMethod" prefWidth="180.0"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;"/>
            <Button text="Refresh" onAction="#handleRefresh" prefWidth="100.0"
                    style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-background-radius: 5;"/>
        </HBox>

        <TableView fx:id="paymentMethodsTable" prefHeight="400.0" prefWidth="530.0">
            <columns>
                <TableColumn fx:id="typeColumn" text="Type" prefWidth="150.0">
                    <cellValueFactory>
                        <PropertyValueFactory property="tipo" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="cardNumberColumn" text="Card Number" prefWidth="180.0">
                    <cellValueFactory>
                        <PropertyValueFactory property="numeroTarjeta" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="holderColumn" text="Card Holder" prefWidth="150.0">
                    <cellValueFactory>
                        <PropertyValueFactory property="titular" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="expirationColumn" text="Expiration" prefWidth="100.0">
                    <cellValueFactory>
                        <PropertyValueFactory property="fechaExpiracion" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>

        <HBox spacing="12.0" alignment="CENTER">
            <Button text="Edit" onAction="#handleEdit" prefWidth="110.0"
                    style="-fx-background-color: #F39C12; -fx-text-fill: white; -fx-background-radius: 5;"/>
            <Button text="Delete" onAction="#handleDelete" prefWidth="110.0"
                    style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-background-radius: 5;"/>
            <Button text="Set as Default" onAction="#handleSetDefault" prefWidth="130.0"
                    style="-fx-background-color: #9B59B6; -fx-text-fill: white; -fx-background-radius: 5;"/>
        </HBox>


        <Label fx:id="statusLabel" textFill="#2C3E50">
            <font><Font size="12.0"/></font>
        </Label>
    </VBox>
</AnchorPane>