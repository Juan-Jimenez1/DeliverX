            </VBox>

            <Separator prefWidth="300.0">
                <padding>
                    <Insets bottom="10.0" top="10.0" />
                </padding>
            </Separator>

            <VBox alignment="CENTER" prefWidth="300.0" spacing="15.0">
                <Label style="-fx-text-fill: #7F8C8D;" text="Don't have an account yet?">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Label>

                <VBox alignment="CENTER" spacing="10.0">
                    <Button mnemonicParsing="false" onAction="#handleRegisterUser" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #CC5E13; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold;" text="Register as User">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Button>
