                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>

            <Label style="-fx-font-weight: bold; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 3, 0, 1, 1);" text="DeliverX">
                <font>
                    <Font name="System Bold" size="32.0" />
                </font>
            </Label>

            <Label style="-fx-text-fill: #FFF8F0; -fx-text-alignment: center;" text="Fast &amp; Reliable Delivery Service" wrapText="true">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>

            <Separator prefWidth="200.0" style="-fx-background-color: #FFF8F0;" />

            <VBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 10; -fx-padding: 15;">
                <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="Why Choose DeliverX?">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
                <Label style="-fx-text-fill: #FFF8F0;" text="✓ Fast Delivery">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
                <Label style="-fx-text-fill: #FFF8F0;" text="✓ Real-time Tracking">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
                <Label style="-fx-text-fill: #FFF8F0;" text="✓ Secure Payments">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
                <Label style="-fx-text-fill: #FFF8F0;" text="✓ 24/7 Support">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
            </VBox>
        </VBox>

        <!-- Right Side - Login Section -->
        <VBox alignment="CENTER" prefWidth="400.0" spacing="25.0" style="-fx-background-color: #FFFFFF; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 0);">
            <padding>
                <Insets bottom="40.0" left="50.0" right="50.0" top="40.0" />
            </padding>

            <VBox alignment="CENTER" spacing="5.0">
                <Label style="-fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="Welcome Back">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                </Label>
                <Label style="-fx-text-fill: #7F8C8D;" text="Sign in to your account">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </VBox>

            <VBox prefWidth="300.0" spacing="20.0">
                <VBox spacing="8.0">
                    <Label style="-fx-text-fill: #2C3E50; -fx-font-weight: bold;" text="Username">
                        <font>
                            <Font size="13.0" />
                        </font>
                    </Label>
                    <TextField fx:id="nameId" prefHeight="45.0" prefWidth="300.0" promptText="Enter your username" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #DDDDDD; -fx-border-width: 1; -fx-padding: 12;">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </TextField>
                </VBox>

                <VBox spacing="8.0">
                    <Label style="-fx-text-fill: #2C3E50; -fx-font-weight: bold;" text="Password">
                        <font>
                            <Font size="13.0" />
                        </font>
                    </Label>
                    <PasswordField fx:id="passwordId" prefHeight="45.0" prefWidth="300.0" promptText="Enter your password" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #DDDDDD; -fx-border-width: 1; -fx-padding: 12;">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </PasswordField>
                </VBox>

                <Label fx:id="errorLabel" prefWidth="300.0" style="-fx-text-fill: #E74C3C; -fx-font-weight: bold;" wrapText="true">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>

                <Button fx:id="loginId" mnemonicParsing="false" onAction="#handleLogin" prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: linear-gradient(to right, #CC5E13, #E67E22); -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(204,94,19,0.3), 5, 0, 0, 2);" text="Sign In">
